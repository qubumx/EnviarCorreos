<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/bower_components/bootstrap/dist/js/bootstrap.js" rel="stylesheet" />
</head>
<body>
    <h1>Enviar Correo Electr&oacutenico</h1>
    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post)) //etiqueta form que va al controller de libros, la función de AltaLibro y con el metodo POST
    {
        <article>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.ClientName)
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ClientName)
                    @Html.ValidationMessageFor(m => m.ClientName)
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.ClientEmail)
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.ClientEmail)
                    @Html.ValidationMessageFor(m => m.ClientEmail)
                </div>
            </div>
        </article>
        <br /><br />
        <section>
            <div class="row" style="text-align:center">
                <div class="col-md-12">
                    <button type="submit">Enviar</button>
                </div>
            </div>
        </section>
    }
</body>
</html>